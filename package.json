{
  "name": "ziasub-monorepo",
  "version": "0.0.7",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "mobile": "bun run --cwd packages/mobile",
    "mobile:start": "bun run --cwd packages/mobile start",
    "mobile:android": "bun run --cwd packages/mobile android",
    "extension": "bun run --cwd packages/extension",
    "extension:dev": "bun run --cwd packages/extension dev",
    "extension:build": "bun run --cwd packages/extension build",
    "shared:build": "bun run --cwd packages/shared build"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
